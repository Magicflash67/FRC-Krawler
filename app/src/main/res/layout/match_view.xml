<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:minHeight="48dp"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/match_title"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_weight="1.5"
            android:gravity="center|center_horizontal|center_vertical" />

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:minHeight="40dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/red_alliance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/red1"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_upper_red_alliance"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="Red 1" />

                        <TextView
                            android:id="@+id/red2"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:background="@color/red_800"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="Red 2" />

                        <TextView
                            android:id="@+id/red3"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:background="@color/red_800"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="Red 3" />

                        <TextView
                            android:id="@+id/red_score"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.5"
                            android:background="@drawable/rounded_upper_right_red_alliance"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="Red Score"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/blue_alliance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/blue1"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_lower_left_blue_alliance"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="Blue 1" />

                        <TextView
                            android:id="@+id/blue2"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:background="@color/blue_800"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="Blue 2" />

                        <TextView
                            android:id="@+id/blue3"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:background="@color/blue_800"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="Blue 3" />

                        <TextView
                            android:id="@+id/blue_score"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.5"
                            android:background="@drawable/rounded_lower_right_blue_alliance"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="Blue Score"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>
            </TableRow>
        </TableLayout>
        <!--Inspired by TBA :)-->
    </LinearLayout>
</android.support.v7.widget.CardView>


